
{% extends "layouts/page.html.j2" %}

{% set title = "Home" %}
{% set scripts = ['fetch-levels.mjs'] %}

{% block content %}
    <h1>awesome game</h1>
    
    {% if session.user_id %}
        <a href="{{ url_for('userpage') }}">Create levels</a>
    {% endif %}

    <div id="levels-list">
        <p>Loading levels...</p>
    </div>

    {% if session.user_id %}
        <button id="publish">publish test level</button>
        <script type="module">
            document.querySelector('#publish').addEventListener('click', async e => {
                try {
                    const res = await fetch('/api/levels', {
                        method: 'POST',
                        body: JSON.stringify({
                            name: 'Test level',
                            publisher: {{ session.user_id }},
                            data: {
                                playerX: 3,
                                playerY: 10,
                                objects: [
                                    { type: 'block', x: 6, y: 2 },
                                    { type: 'block', x: 10, y: 3 },
                                    { type: 'block', x: 14, y: 4 },
                                    { type: 'block', x: 15, y: 4 },
                                    { type: 'block', x: 16, y: 4 },
                                    { type: 'spike', x: 16, y: 5 },
                                    { type: 'block', x: 17, y: 4 },
                                    { type: 'block', x: 18, y: 4 },
                                    { type: 'block', x: 20, y: 3 },
                                    { type: 'block', x: 20, y: 2 },
                                    { type: 'block', x: 20, y: 1 },
                                ]
                            }
                        }),
                        headers: {
                            'Content-type': 'application/json; charset=UTF-8'
                        }
                    });
                    const msg = await res.json();
                    if (!res.ok) {
                        throw msg.reason;
                    }
                    alert('Succesfully posted level');
                }
                catch(e) {
                    alert(`Error posting level: ${e}`);
                }
            });
        </script>
    {% endif %}
{% endblock %}
